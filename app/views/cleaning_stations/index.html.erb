<div class="container">

  <div class=" py-4">
    <div class="row">
        <div class="col-12 text-center">
          <h1 class="cleaning-stations">Fixing Orders per Cleaning Station</h1>
        </div>
    </div>
  </div>

  <div class="row station-super-card">
    <% @cleaning_stations.each do |cleaning_station| %>
      <div class="col-sm-6 ">
        <h4><%= cleaning_station.name %></h4>
        <p><%= cleaning_station.address %> </p>
      </div>
      <div class="col-sm-6">
        <div class="cards">
          <% cleaning_station.fix_orders.each do |fix_order| %>
            <div class="card-product">
              <%= cl_image_tag(fix_order.post.photo.key, width: 300, crop: "fill") if fix_order.post.photo.attached? %>
                <div class="card-trip-infos">
                  <div>
                    <h2><%= fix_order.post.description %></h2>
                    <p><%= fix_order.post.address %></p>
                  </div>
                  <%= link_to "Mark as fixed", post_path(fix_order.post), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
                </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
